#include <iostream>
#include <fstream>
#include <cstdlib> 
#include <ctime> 
using namespace std;

int main(){
    srand(time(NULL)); 

    int i,n,time,rem,temp=0,qt;
    float wt=0,tat=0;
    cout<<"Enter the total number of process="<<endl;
    cin>>n;
    rem=n;
    int at[n];
    int bt[n];
    int rt[n];
    ofstream outfile;
    outfile.open("processes.txt"); 

    for(i=0;i<n;i++)
    {
        at[i] = rand() % 100;
        bt[i] = rand() % 10 + 1; 
        rt[i]=bt[i];
        outfile << at[i] << " " << bt[i] << endl; 
    }
    outfile.close(); // close the file

    cout<<"Enter quantum time :"<<endl;
    cin>>qt;
    cout<<"\n\nProcess\t:Turnaround_Time:Waiting_Time\n\n";
    for(time=0, i=0; rem!=0; )
    {
        if (rt[i] <= qt && rt[i] > 0) {
            time += rt[i];
            rt[i] = 0;
            temp = 1;
        } else if (rt[i] > 0) {
            rt[i] -= qt;
            time += qt;
        }

        if (rt[i] == 0 && temp == 1) {
            rem--;
            printf("Process{%d}\t:\t%d\t:\t%d\n",i,time-at[i],time-at[i]-bt[i]);
            cout<<endl;
            tat = tat + time-at[i];
            wt = wt + tat - bt[i];
            temp = 0;
        }

        int next_i = (i + 1) % n;
        if (next_i == 0) {
            bool all_arrived = true;
            for (int j = 0; j < n; j++) {
                if (rt[j] > 0 && at[j] <= time) {
                    all_arrived = false;
                    break;
                }
            }
            if (all_arrived) {
                time = at[i+1];
            }
        }

        i = next_i;
    }
    cout<<"Avg waiting_time "<<wt/n<<endl;
    cout<<"Avg turn_around_time "<<tat/n<<endl;;
    return 0;
}
